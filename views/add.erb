
<h3>What answers would you like to add?</h3>
<form action="/add" method="post">
  <input type="text" name="addanswer" size="30">
  <input type="submit" value="Add">
</form>

<% if @addanswer %>
  <p class="answers">You added: </p>
  <p class="response"><%= @addanswer %></p>
  <p><%= $updated_answers %>
<% end %>
